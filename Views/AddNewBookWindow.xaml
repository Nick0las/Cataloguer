<Window x:Class="Cataloguer.Views.AddNewBookWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:Cataloguer.Views"
        xmlns:vm="clr-namespace:Cataloguer.ViewModels"
        Title="{Binding Title}" Height="450" Width="650">
    <Window.DataContext>
        <vm:AddNewBook_VM/>
    </Window.DataContext>
    <DockPanel Background="Black">
        <StackPanel DockPanel.Dock="Top">
            <TextBlock FontSize="45"
                       Text="Новая книга"
                       TextWrapping="Wrap" 
                       TextAlignment="Left"                       
                       VerticalAlignment="Center"
                       Padding="5,0,0,0"
                       FontFamily="Monotype Corsiva"
                       FontWeight="Normal" FontStyle="Normal">
                <TextBlock.Foreground>
                    <LinearGradientBrush>
                        <GradientStop Color="GreenYellow" Offset="0.1"/>
                        <GradientStop Color="Yellow"  Offset="0.2"/>
                        <GradientStop Color="Red" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
                <TextBlock.Background>
                    <LinearGradientBrush  StartPoint="0,0" EndPoint="1,9">
                        <GradientStop Color="LimeGreen" Offset="0.95"/>
                        <GradientStop Color="Blue" Offset="0.84"/>
                        <GradientStop Color="Red" Offset="0.73"/>
                        <GradientStop Color="Yellow" Offset="0.56"/>
                        <GradientStop Color="Black" Offset="0.45"/>
                    </LinearGradientBrush>
                </TextBlock.Background>
            </TextBlock>
        </StackPanel>
        <Grid DockPanel.Dock="Top">
            <Grid.RowDefinitions>
                <RowDefinition Height="25"/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0"
                       Text="Автор"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Height="20"
                       Width="55"
                       FontWeight="Normal"
                       FontStyle="Normal"
                       FontFamily="Monotype Corsiva"
                       FontSize="20"
                       Foreground="Gold"/>
            <TextBlock Grid.Row="1"
                       Margin="10,5,25,5"
                       Text="Фамилия"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Top"
                       Height="20"
                       FontWeight="Normal"
                       FontStyle="Normal"
                       FontFamily="Monotype Corsiva"
                       FontSize="20"
                       Foreground="Gold"/>
            <TextBox Grid.Row="1"
                     Margin="10,5,10,0"
                     Height="16"
                     Width="200"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Left"/>

            <TextBlock Grid.Row="1"
                       Margin="0,5,165,5"
                       Text="Имя"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Top"
                       Height="20"
                       FontWeight="Normal"
                       FontStyle="Normal"
                       FontFamily="Monotype Corsiva"
                       FontSize="20"
                       Foreground="Gold"/>
            <TextBox Grid.Row="1"
                     Margin="0,5,0,0"
                     Height="16"
                     Width="200"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Center"/>

            <TextBlock Grid.Row="1"
                       Margin="0,5,125,5"
                       Text="Отчество"
                       Width="85"
                       HorizontalAlignment="Right"
                       VerticalAlignment="Top"
                       Height="20"
                       FontWeight="Normal"
                       FontStyle="Normal"
                       FontFamily="Monotype Corsiva"
                       FontSize="20"
                       Foreground="Gold"/>
            <TextBox Grid.Row="1"
                     Margin="10,5,10,0"
                     Height="16"
                     Width="200"
                     VerticalAlignment="Center"
                     HorizontalAlignment="Right"/>
        </Grid>
    </DockPanel>
</Window>
