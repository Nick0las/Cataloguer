<Window x:Class="Cataloguer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" mc:Ignorable="d"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:l="clr-namespace:Cataloguer"
        xmlns:fa="http://schemas.fontawesome.com/icons/"
        xmlns:serv="clr-namespace:Cataloguer.Services"
        xmlns:vm="clr-namespace:Cataloguer.ViewModels"        
        Title="{Binding Title}" MinHeight="500" MinWidth="800" Height="800" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <vm:MainWindow_VM/>
    </Window.DataContext>
    <DockPanel Background="Cyan">
        <StackPanel DockPanel.Dock="Top">
            <TextBlock FontSize="45"
                       Text="Каталогизатор книг"
                       TextWrapping="Wrap" 
                       TextAlignment="Left"                       
                       VerticalAlignment="Center"
                       Padding="5,0,0,0"
                       FontFamily="Monotype Corsiva"
                       FontWeight="Normal" FontStyle="Normal">
                <TextBlock.Foreground>
                    <LinearGradientBrush>
                        <GradientStop Color="GreenYellow" Offset="0.1"/>
                        <GradientStop Color="Yellow"  Offset="0.2"/>
                        <GradientStop Color="Red" Offset="1"/>
                    </LinearGradientBrush>
                </TextBlock.Foreground>
                <TextBlock.Background>
                    <LinearGradientBrush  StartPoint="0,0" EndPoint="1,9">
                        <GradientStop Color="LimeGreen" Offset="0.95"/>
                        <GradientStop Color="Blue" Offset="0.84"/>
                        <GradientStop Color="Red" Offset="0.73"/>
                        <GradientStop Color="Yellow" Offset="0.56"/>
                        <GradientStop Color="Black" Offset="0.45"/>
                    </LinearGradientBrush>
                </TextBlock.Background>                
            </TextBlock>
        </StackPanel>
        <Menu DockPanel.Dock="Top"              
              Height="23"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"
              Style="{StaticResource MenuCustomStyle}">
            <MenuItem Header="Файл"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Stretch"
                      Height="23"
                      FontFamily="Segoe UI Semibold" 
                      FontWeight="Bold">
                <MenuItem Header="Сохранить"
                          FontWeight="Normal"
                          FontStyle="Normal"
                          FontFamily="Sylfaen"
                          FontSize="14">
                </MenuItem>
            </MenuItem>
        </Menu>
        <ToolBar DockPanel.Dock="Top"
                 Background="Black"
                 HorizontalAlignment="Stretch"
                 Height="35">
            <Button Height="35"                    
                    Width="70"
                    Style="{StaticResource CastomButtonStyle}"/>
        </ToolBar>
        <StatusBar DockPanel.Dock="Bottom" 
                   Height="25" 
                   HorizontalAlignment="Stretch"
                   Background="Gray"/>
        <Grid DockPanel.Dock="Left"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"
              Background="LightSalmon"
              Width="150">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>           
        </Grid>
        <Grid DockPanel.Dock="Right"
              VerticalAlignment="Stretch"
              HorizontalAlignment="Stretch"
              Background="AliceBlue">
            <DataGrid AutoGenerateColumns="False"
                      CanUserReorderColumns="False" 
                      CanUserAddRows="False"
                      CanUserResizeColumns="False"
                      IsReadOnly="True"
                      GridLinesVisibility="Vertical"
                      VerticalGridLinesBrush="DarkGray"
                      ItemsSource="{Binding Source={x:Static serv:Collections.BooksObsCollection}}">
                <DataGrid.Columns>
                    <DataGridTextColumn MinWidth ="130"
                                        Width="auto"
                                        Header="Автор"
                                        Binding="{Binding Author}"/>
                    <DataGridTextColumn Width="2*"
                                        Header="Название"
                                        Binding="{Binding Title}"/>
                    <DataGridTextColumn Width="1*"
                                        Header="Тематика"
                                        Binding="{Binding Genre}"/>
                    <DataGridTextColumn Width="*"
                                        Header="Год издания"
                                        Binding="{Binding YearPublication}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
        
    </DockPanel>
</Window>
